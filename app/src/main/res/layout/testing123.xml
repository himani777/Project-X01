<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >



    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_border_"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of the book"
            android:textSize="40sp"
            android:id="@+id/nob"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/abc"
            android:background="#000000"
            android:layout_below="@+id/nob"

            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'Lets just see where The smell of this book is coming from'"
            android:textSize="20sp"
            android:id="@+id/nob2"
            android:layout_below="@+id/abc"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"/>

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/pg"
            android:layout_below="@+id/nob2"
            android:id="@+id/pg"
            android:layout_marginBottom="15dp"
            />
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/rg"
            android:layout_below="@+id/nob2"
            android:layout_alignEnd="@+id/nob2"
            android:layout_alignRight="@+id/nob2"
            android:layout_marginBottom="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/v2"
            android:background="#000000"
            android:layout_below="@+id/pg"
            android:layout_marginBottom="15dp"
            />



        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_below="@+id/v2"
            android:id="@+id/navicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigate"
            android:layout_toRightOf="@+id/navicon"
            android:id="@+id/nav"
            android:textSize="20sp"
            android:layout_below="@+id/v2"/>
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="3dp"
            android:layout_height="24dp"
            android:id="@+id/h1"
            android:background="#000000"
            android:layout_below="@+id/v2"
            android:layout_toRightOf="@+id/nav"
            android:layout_marginBottom="15dp"
            />




        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_below="@+id/v2"
            android:id="@+id/callicon"
            android:layout_toRightOf="@+id/h1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:layout_toRightOf="@+id/callicon"
            android:id="@+id/call"
            android:textSize="20sp"
            android:layout_below="@+id/v2"/>
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="3dp"
            android:layout_height="24dp"
            android:id="@+id/h2"
            android:background="#000000"
            android:layout_below="@+id/v2"
            android:layout_toRightOf="@+id/call"
            android:layout_marginBottom="15dp"
            />




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_note_black_24dp"
            android:layout_below="@+id/v2"
            android:id="@+id/msgicon"
            android:layout_toRightOf="@+id/h2"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_toRightOf="@+id/msgicon"
            android:id="@+id/msg"
            android:textSize="20sp"
            android:layout_below="@+id/v2"/>


    </RelativeLayout>
</LinearLayout>