  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="5"
      android:orientation="horizontal">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="4"
          android:orientation="vertical"
          android:layout_gravity="center">

          <com.facebook.drawee.view.SimpleDraweeView
              android:layout_width="wrap_content"
              android:layout_height="30sp"
              android:src="@drawable/faltu"/>


      </LinearLayout>



      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:layout_marginLeft="5sp">


          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/upper">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Distance : "
                  android:textColor="#4a4a4a"
                  android:textStyle="bold"
                  android:textSize="15sp"
                  android:id="@+id/distance"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/distance"
                  android:text="50 km"
                  android:textStyle="bold"
                  android:textColor="#4a4a4a"

                  android:textSize="15sp"
                  android:id="@+id/lbl_distance"/>

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:src="@drawable/ic_phone_black_24dp"/>

          </RelativeLayout>


          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#00242B"/>



          </RelativeLayout>


          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10sp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="J.K. Rowling"
                  android:textColor="#00242B"
                  android:textSize="17dp"
                  android:id="@+id/bookauthor"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=">"
                  android:textColor="#00242B"
                  android:textSize="17dp"
                  android:layout_toRightOf="@+id/bookauthor"
                  android:layout_marginLeft="10sp"/>


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Harry Potter and the Prison of Azkaban"
                  android:layout_below="@id/bookauthor"
                  android:layout_marginTop="3sp"
                  android:textColor="#4a4a4a"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:id="@+id/bookname"/>


              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/bookname"
                  android:layout_marginBottom="5sp">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_alignParentRight="true">


                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_today_black_18dp"
                          android:id="@+id/date_icon"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_toRightOf="@+id/date_icon"
                          android:text="Date "
                          android:layout_marginLeft="10sp"
                          android:id="@+id/book_date"
                          />


                  </LinearLayout>


              </RelativeLayout>
          </RelativeLayout>





      </LinearLayout>









  </LinearLayout>




</android.support.v7.widget.CardView>

