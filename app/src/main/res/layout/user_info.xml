<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="#456789"
    android:weightSum="2"
    android:scrollbars="vertical">






    <!-- <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="LOGIN"
         android:layout_gravity="center"
         android:textSize="20sp"
         android:layout_marginTop="10sp"
         android:textColor="#fe6466"
         android:textStyle="bold"/>-->



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:src="@drawable/fill2"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_centerInParent="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:src="@drawable/ic_location_on_white_24dp"/>



                <EditText
                    android:id="@+id/ui_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingRight="80sp"
                    android:paddingLeft="20sp"
                    android:textColor="#fe6466"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:background="@android:color/transparent"/>


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_white_24dp"
                    android:paddingTop="10sp"/>


                <EditText
                    android:id="@+id/ui_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact"
                    android:paddingRight="80sp"
                    android:paddingLeft="20sp"
                    android:textColor="#fe6466"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:background="@android:color/transparent"/>


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account_balance_white_24dp"
                    android:paddingTop="10sp"/>


                <EditText
                    android:id="@+id/ui_university"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="University"
                    android:paddingRight="80sp"
                    android:paddingLeft="20sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:textColor="#fe6466"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@android:color/transparent"/>


            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>


            <Button
                android:id="@+id/done"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ENTER"
                android:textStyle="bold"/>



          <!--  <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Registered Yet ?"
                android:layout_centerInParent="true"
                android:id="@+id/forgotpass"
                android:textColor="#ffffff"
                android:gravity="bottom|center" />-->




        </LinearLayout>


    </RelativeLayout>














</LinearLayout>